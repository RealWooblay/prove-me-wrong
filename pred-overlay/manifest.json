{
    "manifest_version": 3,
    "name": "Prediction Overlay",
    "version": "0.1.0",
    "description": "Overlay YES/NO prediction UI on tweets with market links.",
    "permissions": [
        "scripting"
    ],
    "host_permissions": [
        "https://twitter.com/*",
        "https://mobile.twitter.com/*",
        "https://x.com/*",
        "https://mobile.x.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://twitter.com/*",
                "https://mobile.twitter.com/*",
                "https://x.com/*",
                "https://mobile.x.com/*"
            ],
            "js": [
                "content-script.js"
            ],
            "css": [
                "overlay.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "overlay.css",
                "inpage-proxy.js",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}